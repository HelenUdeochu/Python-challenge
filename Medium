user = "What were you doing?"

print(user)

var1 = "H for SHOUTING"
var2 = "h for whispering"
var3 = "Hh for Talking normal"


print(var1)
print(var2)
print(var3)


userword = input("Type here: ")

if (userword.isupper() == True):
  print("SHOUTING")
elif (userword.islower() == True):
  print("whispering")
else:
  print("Talking normal")
